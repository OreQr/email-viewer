{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleDetection": "force",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "email-viewer": ["./src/index.ts"]
    }
  },
  "include": [
    "src",
    "tests",
    "tsup.config.ts",
    "vitest.config.mts",
    "prettier.config.cjs"
  ],
  "exclude": ["node_modules"]
}
