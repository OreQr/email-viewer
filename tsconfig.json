{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleDetection": "force",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "paths": {
      "email-viewer": ["./src/index.ts"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
